<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:background="@drawable/favorites_bg"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavDogList"
        android:name="TODO"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".FavoritesFragment"
        tools:listitem="@layout/dog_profile" />

    <TextView
        android:id="@+id/tvBlankFavoritesMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Woof! See your favorite dogs here"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/rvFavDogList"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="32sp"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

